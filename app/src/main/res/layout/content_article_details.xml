<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentText"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.deon_mass.lekiosque.Article_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:elevation="2dp"
                android:background="#5a6a80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/Infodate"
                    android:elevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27/02/2018"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/Infotime"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(10h30)"
                    android:textSize="12dp"
                    android:textColor="#fff"/>

            </LinearLayout>

            <LinearLayout
                android:elevation="2dp"
                android:background="#294871"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categorie"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/Infocategorie"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Informatique)"
                    android:textSize="12dp"
                    android:textColor="#fff"/>

            </LinearLayout>

            <LinearLayout
                android:elevation="2dp"
                android:background="#0e3870"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/InfoPrix"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="prix"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    android:textColor="#fff"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/Infodetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/large_text"
                android:textColor="#706e6e"/>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp">
            <TextView
                android:visibility="gone"
                android:id="@+id/editAnnonce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#b61612"
                android:text="Modifier votre article"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="14dp"
                android:gravity="center"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fournisseurIMG"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar_default"/>

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="#2c818181"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A propos du fournisseur"
                        android:textColor="#706e6e"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/InfoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Load..."
                        android:textColor="#706e6e"
                        android:textSize="20dp"
                        />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:elevation="2dp"
                android:background="#a0c6f4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:elevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nbr poste"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(10)"
                    android:textSize="12dp"
                    android:textColor="#fff"/>

            </LinearLayout>

            <LinearLayout
                android:elevation="2dp"
                android:background="#579ff7"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Identifiant"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/Infoidetifiant"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Load...)"
                    android:textSize="12dp"
                    android:textColor="#fff"/>

            </LinearLayout>

            <LinearLayout
                android:elevation="2dp"
                android:background="#0172fd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Téléphone"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/Infophone"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Load...)"
                    android:textSize="12dp"
                    android:textColor="#fff"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/InfoAutres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Load..."
                android:textColor="#706e6e"/>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Confidentialités"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:drawableRight="@android:drawable/presence_online"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/large_text"
                android:textColor="#706e6e"/>

        </LinearLayout>




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
